[mysqld]
# Basic Settings
user                    = mysql
skip-networking         = false
pid-file                = /run/mysqld/mysqld.pid
socket                  = /run/mysqld/mysqld.sock
datadir                 = /var/lib/mysql
bind-address            = 0.0.0.0  # Bind to all network interfaces


# adds error log file at this path
log_error               = /var/log/mysql/error.log

# Character set
character-set-server    = utf8mb4
collation-server        = utf8mb4_general_ci

# Query Cache Configuration && InnoDB settings are for small \
# databanks halt datenbanken not that important but for bigger projects you have to use them
#query_cache_size        = 16M
#innodb_file_per_table   = 1
#innodb_buffer_pool_size = 128M
